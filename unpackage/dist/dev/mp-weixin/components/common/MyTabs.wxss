/* 水平间距 */
.tab {
  font-size: 14px;
  height: 45px;
  line-height: 45px;
  background-color: #fff;
}
.tab_box {
  position: relative;
  display: flex;
  width: 100%;
  height: 45px;
}
.tab_box_scroll_view {
  width: 100%;
  height: 100%;
  white-space: nowrap;
  box-sizing: border-box;
}
.tab_box_scroll_view_content {
  position: relative;
  width: 100%;
  height: 100%;
}
.tab_box_scroll_view_content_box {
  height: 100%;
}
.tab_box_scroll_view_content_box_item {
  position: relative;
  display: inline-block;
  height: 100%;
  color: #333;
  text-align: center;
  padding: 0 15px;
}
.tab_item_active {
  color: #f94d2a;
}
.underline {
  position: absolute;
  bottom: 0;
  width: 24px;
  height: 2px;
  background-color: #f94d2a;
  border-radius: 3px;
  transition: 0.5s;
}
/* ifdef H5*/
 .uni-scroll-view::-webkit-scrollbar {
  display: none;
}
 .uni-scroll-view {
  scrollbar-width: none;
}
